            	<div id="profs"> 
	                <form id="addAssignmentTypes" role="form" method="post" action="/editCourse">

	                    <div id="field" class="input-append row">
	                    	<div id="field1" class="col-xs-8 col-md-8"><br>
		                    	<input autocomplete="off" class="form-control" type="text" name="field1"placeholder="Ex: Paper, 0.25" data-items="8" required>
		                    </div>
	                    </div>

	                    <br>
	                    <button id="b1" class="btn btn-default add-more" type="button"><i class="glyphicon glyphicon-plus"></i> Add another type</button></input>

	                    <input autocomplete="off" class="hidden" id="numFields" type="hidden" value="1"/>

	                    <br><br>
	                    
	                    <div>
			    			<button type="submit" id="submitBtn" class="btn btn-default pull-right" ><i class="glyphicon glyphicon-floppy-disk"></i> Save</button>
