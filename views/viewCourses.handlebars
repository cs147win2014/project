<!doctype html>

<html>
<head>
	<title>Assignments</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" type="text/css" href="css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="css/simplex.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	<div class="container">
		{{>navbar}}
		<h1><b>All Courses</b></h1>
		<hr>
		
		
		<!-- THIS IS WHERE THE PANEL LIST GROUP IS -->
		<div class="panel panel-default">
  		<!-- Default panel contents -->
  			<div class="panel-heading">Courses</div>
  			<!-- List group -->
  			<ul class="list-group">
				{{#each courses}}
					<li id="{{name}}" class="list-group-item">{{department}} {{number}}</li>
				{{/each}}
  			</ul>
		</div>

		<div class="row container-fluid">
			<form id="addCourseForm" role="form" method="post" action="/addCourse">
				<h3>Add a course</h3>
			    <div class="form-group col-md-6">
			      <label for="department">Department:</label>
			      <input type="text" class="form-control" id="department" placeholder="Ex: CS" name="department" required>
			    </div>
			    <div class="form-group col-md-6">
			      <label for="number">Number:</label>
			      <input type="text" class="form-control" id="number" placeholder="Ex: 106A" name="number" required>
			    </div>
			    <div class="form-group col-md-6">
			    	<button type="submit" id="submitBtn" class="btn btn-default form-group col-md-2" >Next <i class="glyphicon glyphicon-chevron-right"></i></button>
			    </div>
			</form>
		</div>
		<hr>
	</div>
	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/addCourse.js"></script>
	<script src="js/common.js"></script>


</body>


</html>
