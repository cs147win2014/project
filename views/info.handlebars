		<div class="row container-fluid">
					<form id="addAssignmentForm" role="form" method="get" action="/add">
		<div class="form-group">
          <label for="Type">Course:</label>
          <select class="form-control" id="courseSelect">
            <option value="1"></option>
            {{#each courses}}
            <option value="1">{{department}}{{number}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label for="Type">Type:</label>
          <select class="form-control" id="typeSelect">
            <option value="1"></option>
            {{#each courses}}
            <option value="1">{{department}}{{number}}</option>
            {{/each}}
          </select>
        </div>
		    <div class="form-group">
		      <label for="name">Name:</label>
		      <input type="text" class="form-control" id="name" placeholder="Ex: RBA" name="name" required>
		    </div>
		    <div class="row">
			    <div class="form-group col-md-2 col-xs-4">
			      <label for="score">Score:</label>
			      <input type="text" class="form-control" id="score" placeholder="Ex: 95" name="score" required>
			    </div>
			    <div class="form-group col-md-2 col-xs-4">
			      <label for="total">Out of:</label>
			      <input type="text" class="form-control" id="total" placeholder="Ex: 100" name="total" required>
			    </div>
			</div>
		    <hr>
		    <div class="row container-fluid">
		    <button type="submit" id="submitBtn" class="btn btn-default col-md-2 col-xs-4 pull-right" ><i class="glyphicon glyphicon-plus"></i> Add</button>
		</form>
